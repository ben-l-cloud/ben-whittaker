const axios = require('axios');

module.exports = {
  name: 'aidefine',
  description: 'Elezea maana ya neno kwa kutumia AI',
  async execute(sock, m, args) {
    const from = m.key.remoteJid;
    if (!args.length) return sock.sendMessage(from, { text: 'ğŸ’¡ Tuma neno unalotaka maana yake, mfano: !aidefine technology' });

    const word = args.join(" ");

    await sock.sendMessage(from, { text: 'â³ Natafuta maana...' });

    try {
      const prompt = `Explain the meaning of the word "${word}" briefly and simply.`;

      const res = await axios.post('https://chatgpt-api.shn.hk/v1/', {
        messages: [{ role: "user", content: prompt }]
      });

      const definition = res.data.choices[0].message.content;
      await sock.sendMessage(from, { text: 'ğŸ“– Maana:\n' + definition.trim() });
    } catch (err) {
      await sock.sendMessage(from, { text: 'âŒ Samahani, sikupata maana ya neno.' });
    }
  }
};
